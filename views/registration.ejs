<%-include('./partials/header.ejs')%>
<link rel="stylesheet" href="/css/style.css">
<script src="/app/registration.js" type="module"></script>
<title>הרשמה למועדון לקוחות</title>
<%-include('./partials/navbar.ejs')%>

<button class="back-btn"><a href="/">חזרה לדף הבית</a></button>
<h1>הרשמה למועדון הלקוחות שלנו</h1>

<form action="/registration" method="post" class="registration-form" id="registration-form">
   <div>
    <label for="">שם מלא *</label>
    <input type="text" name="name" id="regName" required oninvalid="this.setCustomValidity('שדה חובה')" oninput="this.setCustomValidity('')">
</div>
   <div>
    <label for="">טלפון *</label>
    <input type="text" name="phone" id="regPhone" required oninvalid="this.setCustomValidity('שדה חובה')" oninput="this.setCustomValidity('')">
</div>
   <div>
    <label for="">טלפון נוסף</label>
    <input type="text" name="otherPhone" id="regOtherPhone">
</div>
   <div>
    <label for="">אימייל *</label>
    <input type="email" name="email" id="regMail" required oninvalid="this.setCustomValidity('שדה חובה')" oninput="this.setCustomValidity('')">
</div>
   <div>
    <label for="">רחוב</label>
    <input type="text" name="street" id="regStreet">
</div>
   <div>
    <label for="">מספר בית</label>
    <input type="number" name="houseNum" id="regHouseNum">
</div>
   <div>
    <label for="">מספר דירה/כניסה</label>
    <input type="text" name="apartementNum" id="regApartementNum">
</div>
   <div>
    <label for="">עיר *</label>
    <input type="text" name="city" id="regCity" required oninvalid="this.setCustomValidity('שדה חובה')" oninput="this.setCustomValidity('')">
</div>

<button>הרשם</button>
</form>
